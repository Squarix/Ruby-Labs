<h1>Категории</h1>
<div class="buttons_panel">
  <%= link_to 'Новая категория', '/admin/categories/new', class: 'btn btn-outline-primary btn-sm' %>
</div>
<section id="categories"> 
  <table class="table">
  	<thead>
  	  <th>h</th>
  	  <th>Название</th>
  	  <th></th>
  	</thead>
  	<tbody>
  	  <% @categories.each_with_index do |category, index| %>
  	    <tr>
  	      <td><%= index + 1 %></td>
  	      <td><%= category.name %></td>
  	      <td>
  	      	<%= link_to 'Изменить', '/admin/categories/' + category.id.to_s + '/edit', class: 'btn btn-outline-primary btn-sm'%>
  	      	<%= link_to 'Удалить', category_path(category), method: :delete, data: { confirm: 'Вы уверены?' }, class: 'btn btn-outline-danger btn-sm'%>
  	      </td>
  	    </tr>
  	  <% end %>
  	</tbody>
  </table>
</section>