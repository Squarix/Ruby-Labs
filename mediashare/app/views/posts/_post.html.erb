<div class="col-lg-3 col-md-4 col-sm-12 post-preview">
  <div class="card mb-4 shadow-sm">
    <div class="card-header">
      <h6 class="text-center mb-0 mt-2">
        <%= link_to post.title, post_path(post), :class => 'text-dark' %>
      </h6>
    </div> 
    <div class="card-body d-flex flex-column flex-wrap align-items-center justify-content-center container_form preview-content">
      <div class="preview_img">
        <%= link_to post.image.url(:full), rel: 'group1', :data => { :colorbox => true } do %>
          <%= image_tag post.image.url(:thumb) if post.image? %>
        <% end %>
      </div>
      <div class="tags">
        <% if post.category_id? %>
          <span class="badge badge-primary"><%= raw post.category_name %></span>
        <% end %>
        <%= raw post.tags.map(&:name).map { |t| link_to t, tag_path(t), class: 'badge badge-secondary'}.join(' ') %>
      </div>
    </div>
  </div>
</div>