  <h5>Categories</h5>
  <div class="dropdown">
    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown1" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Categories</a>
    <div class="row">
      <div class="dropdown-menu col-lg-3 col-md-4 col-sm-12" aria-labelledby="navbarDropdown1">
        <a class="dropdown-item" href="#">
          <ul>
            <% @posts.facets['categories']['terms'].each do |f| %>
              <li>
                <%= link_to_unless_current Category.find(f['term']).name, params.merge(category_id: f['term']) %>
                <% if params[:category_id] == f['term'].to_s %>
                  <%= link_to 'reset', category_id: nil %>
                <% else %>
                  (<%= f['count'] %>)
                <% end %>
              </li>
            <% end %>
          </ul>
        </a>
      </div>
    </div>
  </div>
  <div class="row">
    <%= render @posts %>
	</div>
	<div class="digg_pagination">
      <%= will_paginate @posts, :container => false %>
	</div>	
  </div>
</div>

